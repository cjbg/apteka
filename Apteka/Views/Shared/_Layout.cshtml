<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/templatemo_style.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>    
</head>
<body>
    <div class="page">
        <div id="templatemo_body_wrapper">
	        <div id="templatemo_wrapper">
                <div id="templatemo_header">
    	
                    <div id="site_title">
                        <a href="/" target="_parent">
                            <img src="@Url.Content("~/Content/themes/base/images/templatemo_logo.png")" alt="logo" />
                            <span>Twoja Internetowa Apteka</span>
                        </a>
                    </div>
            
                    <div id="logindisplay">
                        @Html.Partial("_LogOnPartial")
                    </div>
                    <div id="shopping_cart_box">
            	        @Html.Partial("_ShopingCart")
                    </div>       
        </div> <!-- end of templatemo_header -->
        <div id="templatemo_menu">
        
        	<div id="search_box">
              <form action="#" method="get">
                    <input type="text" value="" name="username" size="10" id="input_field" title="usernmae" />
                    <input type="submit" name="login" value="Szukaj" alt="login" id="submit_btn" title="Login" />
              </form>
            </div>  
                  
            <ul>
                <li>@Html.ActionLink("Strona główna", "Index", "Home")</li>
                <li>@Html.ActionLink("Promocje", "Index", "Home")</li>
                <li>@Html.ActionLink("FAQ", "Index", "Home")</li>
                <li>@Html.ActionLink("Twoje Konto", "Index", "Home")</li>
                <li>@Html.ActionLink("Regulamin", "Index", "Home")</li>
                <li>@Html.ActionLink("Kontakt", "About", "Home")</li>
                    @if (Request.IsAuthenticated)
                    {
                        /*  */
                        if (Session["Admin"].Equals("Admin"))
                         {
                            <li>@Html.ActionLink("Zamowienia", "Zamowienia", "Admin")</li>
                         }
                    }
            </ul>    	
        
        </div> <!-- end of templatemo_menu -->
