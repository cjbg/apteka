@model Apteka.t_users

@{
    ViewBag.Title = "Register";
}

<h2>Create a New Account</h2>
<p>
    Wypełnij aby stworzyć konto. Następnie potwierdź rejestracje poprzez kliknięie linku aktywującego konto we wiadomości wysłanej na Państwa skrzynkę pocztową.
</p>
<p>
    Passwords are required to be a minimum of @Membership.MinRequiredPasswordLength characters in length.
</p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true, "Account creation was unsuccessful. Please correct the errors and try again.")
    <div>
        <fieldset>
            <legend>Account Information</legend>

            <div class="editor-label">
                @Html.LabelFor(m => m.Login)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.Login)
                @Html.ValidationMessageFor(m => m.Login)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.email)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.email)
                @Html.ValidationMessageFor(m => m.email)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Haslo)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.Haslo)
                @Html.ValidationMessageFor(m => m.Haslo)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Imie)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.Imie)
                @Html.ValidationMessageFor(m => m.Imie)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Nazwisko)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.Nazwisko)
                @Html.ValidationMessageFor(m => m.Nazwisko)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Ulica)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.Ulica)
                @Html.ValidationMessageFor(m => m.Ulica)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Miasto)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.Miasto)
                @Html.ValidationMessageFor(m => m.Miasto)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.KodPocztowy)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.KodPocztowy)
                @Html.ValidationMessageFor(m => m.KodPocztowy)
            </div>

            <p>
                <input type="submit" value="Register" />
            </p>
        </fieldset>
    </div>
}
