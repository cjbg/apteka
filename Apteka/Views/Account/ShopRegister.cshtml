@model Apteka.t_sklepy

@{
    ViewBag.Title = "ShopRegister";
}

<h2>Stwórz nowe konto</h2>
<p>
    Wypełnij aby stworzyć konto. Następnie potwierdź rejestracje poprzez kliknięie linku aktywującego konto we wiadomości wysłanej na Państwa skrzynkę pocztową. 
</p>
<p>
    Hasła muszą mieć minimum @Membership.MinRequiredPasswordLength znaków.
</p>



@using (Html.BeginForm()) {    
    <div>
        <fieldset>
            <legend>Informacja o koncie</legend>
            
            <div class="editor-label">
                @Html.LabelFor(m => m.t_users.Login)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.t_users.Login)
                @Html.ValidationMessageFor(m => m.t_users.Login)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.t_users.email)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.t_users.email)
                @Html.ValidationMessageFor(m => m.t_users.email)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.t_users.Haslo)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.t_users.Haslo)
                @Html.ValidationMessageFor(m => m.t_users.Haslo)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.t_users.Imie)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.t_users.Imie)
                @Html.ValidationMessageFor(m => m.t_users.Imie)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.t_users.Nazwisko)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.t_users.Nazwisko)
                @Html.ValidationMessageFor(m => m.t_users.Nazwisko)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.t_users.Ulica)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.t_users.Ulica)
                @Html.ValidationMessageFor(m => m.t_users.Ulica)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.t_users.Miasto)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.t_users.Miasto)
                @Html.ValidationMessageFor(m => m.t_users.Miasto)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.t_users.NumerDomu)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.t_users.NumerDomu)
                @Html.ValidationMessageFor(m => m.t_users.NumerDomu)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.t_users.NumerMieszkania)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.t_users.NumerMieszkania)
                @Html.ValidationMessageFor(m => m.t_users.NumerMieszkania)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.t_users.KodPocztowy)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.t_users.KodPocztowy)
                @Html.ValidationMessageFor(m => m.t_users.KodPocztowy)
            </div>
            
            <div class="editor-label">
                @Html.LabelFor(m => m.Nazwa)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.Nazwa)
                @Html.ValidationMessageFor(m => m.Nazwa)
            </div>                      
            <p>
                <input type="submit" value="Zarejestruj" />
            </p>
        </fieldset>
    </div>
}
