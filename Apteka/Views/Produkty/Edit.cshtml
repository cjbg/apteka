@model Apteka.t_produkty

@{
    ViewBag.Title = "Edit";
}

<h2>Edytuj</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Produkty apteki.</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.cena)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.cena)
            @Html.ValidationMessageFor(model => model.cena)
        </div>        

        <div class="editor-label">
            @Html.LabelFor(model => model.lek_id, "t_leki")
        </div>
        <div class="editor-field">
            @Html.DropDownList("lek_id", String.Empty)
            @Html.ValidationMessageFor(model => model.lek_id)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ilosc)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ilosc)
            @Html.ValidationMessageFor(model => model.ilosc)
        </div>

        <p>
            <input type="submit" value="Zapisz" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Powrót", "Index")
</div>
