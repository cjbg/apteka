@model Apteka.ViewModels.ShoppingCartViewModel
<link href="../../Content/menu/simpleverticalmenu.css" rel="stylesheet" />
<script src="../../Scripts/menu/simpleverticalmenu.js"></script>
           
@{
    ViewBag.Title = "Home Page";
}
@section Advert {
                <div class="cleaner"></div>
                <div id="banner">
                	<a href="#" target="_parent"><img src="/Content/themes/base/images/banner.png" alt="banner" /></a>                
                </div>
                }

<h3>Ostatnio dodane</h3>
<div class="product_box margin_r20">
    @if (Model.Products.ToArray().Count() > 0)
    {
        <a href="#"><img src="/Content/themes/base/images/image_2.png" alt="" width="220" height="165" /></a>
        <h3>@Model.Products.ToArray()[0].t_leki.nazwa_char</h3>
        <p class="price">Cena: <span>@Model.Products.ToArray()[0].cena PLN</span></p>
        @Html.ActionLink("Szczegóły", "Details", "Produkty", new { id = Model.Products.ToArray()[0].Id }, new { @class = "detail" }) @Html.ActionLink("Dodaj do koszyka", "AddToCart", "ShoppingCart", new { id = Model.Products.ToArray()[0].Id, returnUrl = Request.Url }, new { @class = "addtocard" })
    }
    <div class="cleaner"></div>
</div>

<div class="product_box">
    @if (Model.Products.ToArray().Count() > 1)
    {                
