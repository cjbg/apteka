@model Apteka.t_users

@{
    ViewBag.Title = "ResetPassword";
}

<h2>Zresetuj hasło</h2>
<p>
    Proszę podać swoją nazwę użytkownika. Za chwilę zostanie przesłane nowe hasło na twój adres e-mail.
</p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    <div>
        <fieldset>
            <legend>Informacje o koncie:</legend>

            <div class="editor-label">
                @Html.LabelFor(m => m.Login)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.Login)
                @Html.ValidationMessageFor(m => m.Login)
            </div>
            
                @Html.HiddenFor(m => m.Haslo)                                   
            <p>
                <input type="submit" value="Zresetuj" />
            </p>
        </fieldset>
    </div>
}
