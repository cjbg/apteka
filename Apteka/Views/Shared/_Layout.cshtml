            <div id="title">
                <h1>Aptegro</h1>
            </div>
       
            <nav>
                <ul id="menu">
                    <li>@Html.ActionLink("Strona główna", "Index", "Home")</li>
                    @if (Request.IsAuthenticated)
                    {
                        /*  */
                        if (Session["Admin"].Equals("Admin"))
                         {
                            <li>@Html.ActionLink("Zamowienia", "Zamowienia", "Admin")</li>
                         }
                    }
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                </ul>
            </nav>
        </header> -->
        <div id="templatemo_content_wrapper">      
        @Html.Partial("_SideBar") 

        <section id="main">

        <div id="templatemo_content">
        @RenderSection("Advert",required: false)
            <div id="content_top"></div>
            <div id="content_middle">
                @RenderBody()
            </div>
            <div id="content_bottom"></div>
        </div>
        </section>


      <div class="cleaner"></div>
      <div id="templatemo_footer_wrapper">

	    <div id="templatemo_footer">
    
            <ul class="footer_menu">
                <li><a href="#" class="current">Today's Specials</a></li>
                <li><a href="#" target="_blank">Web Design</a></li>
                <li><a href="#" target="_parent">Templates</a></li>
                <li><a href="#">Wish Lists</a></li>
                <li><a href="#">Shipping Rates</a></li>
                <li><a href="#">Return Policies</a></li>
                <li><a href="#">Your Account</a></li>
                <li class="last_menu"><a href="#">Help</a></li>
            </ul> 
    
            Copyright © 2013 <a href="#">Aptegro</a>
        
    	    <div class="cleaner"></div>
        </div> <!-- end of footer -->
    </div> <!-- end of templatmeo_footer_wrapper -->
        </div>
</body>
</html>
